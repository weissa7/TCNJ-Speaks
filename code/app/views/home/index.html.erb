<div class="container-fluid" ng-app="app">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h1><span class="fa fa-users"></span><span class="fa fa-commenting-o"></span>TCNJ Speaks</h1>
      <h1 ng-if="name">Hello, {{name}}. Let your voice be heard.</h1>

    </div>
    <div class="panel-body">
      <form class="form-inline">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Enter your name" autofocus ng-model="name">
        </div>
      </form>
    </div>
  </div>
</div>